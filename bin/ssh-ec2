#!/usr/bin/env bash

set -e
# TODO provide help docs on how to setup ~/.ssh/config

instance_name="$1"
# TODO provide an arg for this
instance_number="1"

EC2_INSTANCE_DATA=$(aws ec2 describe-instances --filters "Name=tag:Name,Values=$instance_name")
public_ip_address=$(echo "$EC2_INSTANCE_DATA" | jq -r '.Reservations[].Instances[].PublicIpAddress' | sed -n "${instance_number}p")
private_ip_address=$(echo "$EC2_INSTANCE_DATA" | jq -r '.Reservations[].Instances[].PrivateIpAddress' | sed -n "${instance_number}p")

if [ "$public_ip_address" != "null" ]
then
  ssh "$instance_name"
else
  if [ "$private_ip_address" != "null" ]
  then
    # shellcheck disable=SC2029
    ssh -o "HostName=$private_ip_address" "$instance_name"
  else
    echo "No IP address found"
    exit
  fi
fi
